rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===== user 基本資料 =====
       支援兩種結構：
       1) /user/{uid}  → 文件 ID = auth.uid
       2) /user/{docId}，文件內容含 uid = auth.uid
    */
    match /user/{docId} {
      // 讀：允許所有用戶讀取（用於登入驗證）
      allow read: if true;
      
      // 建：允許創建用戶（用於註冊和測試）
      allow create: if true;

      // 改：允許更新（用於更新登入時間等）
      allow update: if true;

      allow delete: if false;
    }

    /* ===== 成績：扁平集合 /scores/{docId} ===== */
    match /scores/{docId} {
      // 讀：舊文件的 uid 是本人
      allow read: if request.auth != null &&
        (resource.data.uid != null && resource.data.uid == request.auth.uid);

      // 建：新寫入的 uid 是本人
      allow create: if request.auth != null &&
        (request.resource.data.uid != null && request.resource.data.uid == request.auth.uid);

      // 禁止更新和刪除（防止作弊）
      allow update, delete: if false;
    }

    /* ===== 子集合 /user/{uid}/scores/{docId} ===== */
    match /user/{uid}/scores/{docId} {
      allow read, create: if request.auth != null && request.auth.uid == uid;
      allow update, delete: if false;
    }

    // 只開放 user/{uid}/results 與其 answers 子集合
    match /user/{uid}/results/{attemptId} {
      allow read, create, update: if true;   // ← 開發測試用
      allow delete: if false;
    }
    match /user/{uid}/results/{attemptId}/answers/{qid} {
      allow read, create, update: if true;   // ← 開發測試用
      allow delete: if false;
    }
  }
}
