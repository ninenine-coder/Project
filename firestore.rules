rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===== user 基本資料 =====
       支援兩種結構：
       1) /user/{uid}  → 文件 ID = auth.uid
       2) /user/{docId}，文件內容含 uid = auth.uid
    */
    match /user/{docId} {
      // 讀：允許所有用戶讀取（用於登入驗證）
      allow read: if true;
      
      // 建：允許創建用戶（用於註冊和測試）
      allow create: if true;

      // 改：允許更新（用於更新登入時間等）
      allow update: if true;

      allow delete: if false;
    }

    /* ===== 成績：扁平集合 /scores/{docId} ===== */
    match /scores/{docId} {
      // 讀：允許所有已認證用戶讀取（包括匿名用戶）
      allow read: if request.auth != null;

      // 建：允許所有已認證用戶創建（包括匿名用戶）
      allow create: if request.auth != null;

      // 禁止更新和刪除（防止作弊）
      allow update, delete: if false;
    }

    /* ===== 計數器：用於生成唯一 ID /counters/{docId} ===== */
    match /counters/{docId} {
      // 讀：允許所有已認證用戶讀取（包括匿名用戶）
      allow read: if request.auth != null;
      
      // 建：允許所有已認證用戶創建（包括匿名用戶）
      allow create: if request.auth != null;

      // 改：允許所有已認證用戶更新（包括匿名用戶）
      allow update: if request.auth != null;

      allow delete: if false;
    }

    /* ===== UID 映射：用於統一 UID 管理 /uid_mappings/{firebaseUID} ===== */
    match /uid_mappings/{firebaseUID} {
      // 讀：允許所有已認證用戶讀取
      allow read: if request.auth != null;
      
      // 建：允許創建映射記錄
      allow create: if request.auth != null;

      // 改：允許更新映射記錄
      allow update: if request.auth != null;

      allow delete: if false;
    }

    /* ===== 開發測試用：暫時開放所有權限 ===== */
    match /{document=**} {
      allow read, write: if true;  // 開發測試用，暫時開放所有權限
    }

    /* ===== 子集合 /user/{uid}/scores/{docId} ===== */
    match /user/{uid}/scores/{docId} {
      allow read, create: if request.auth != null && request.auth.uid == uid;
      allow update, delete: if false;
    }

    // 只開放 user/{uid}/results 與其 answers 子集合
    match /user/{uid}/results/{attemptId} {
      allow read, create, update: if true;   // ← 開發測試用
      allow delete: if false;
    }
    match /user/{uid}/results/{attemptId}/answers/{qid} {
      allow read, create, update: if true;   // ← 開發測試用
      allow delete: if false;
    }
  }
}
